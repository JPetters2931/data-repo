<div id="login-form" class="col-md-6 col-md-offset-3 jumbotron">

	<h2>Log in</h2>

	<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	    <div class="form-group">
	    	<%= f.input :email, required: false, autofocus: true, class:'form-control' %>
	  	</div>
	  	<div class="form-group">
	    	<%= f.input :password, required: false, class:'form-control' %>
	  	</div>

	    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

	    <%= f.button :submit, "Log in", class:'btn btn-primary center-block' %>
	<% end %>

	<%= render "devise/shared/links" %>

</div>

