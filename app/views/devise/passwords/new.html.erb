<div id="login-form" class="col-md-6 col-md-offset-3 jumbotron">

	<h2>Forgot your password?</h2>

	<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	  <%= f.error_notification %>

	  <div class="form-group">
	    <%= f.input :email, required: true, autofocus: true, class:'form-control' %>
	  </div>

	    <%= f.button :submit, "Send me reset password instructions", class:'btn btn-primary center-block' %>
	<% end %>

	<%= render "devise/shared/links" %>

</div>
