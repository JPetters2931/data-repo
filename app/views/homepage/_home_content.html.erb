<div class="col-xs-12 col-sm-6 home-column-left">
  <ul id="homeTabs" class="nav nav-tabs">
    <li><a href="#featured_container" data-toggle="tab" role="tab" id="featureTab" aria-controls="featured_container"><%= t('sufia.homepage.featured_works.tab_label') %></a></li>
    <li><a href="#recently_uploaded" data-toggle="tab" role="tab" id="recentTab" aria-controls="recently_uploaded"><%= t('sufia.homepage.recently_uploaded') %></a></li>
  </ul>
  <div class="row">
    <div class="col-xs-12 tab-content">
      <div class="tab-pane fade in active" id="featured_container" role="tabpanel" aria-labelledby="featureTab">
        <%= render partial: '/homepage/featured_works' %>
      </div>
      <div class="tab-pane fade" id="recently_uploaded" role="tabpanel" aria-labelledby="recentTab">
        <%= render partial: 'recents', locals: { recent_documents: @recent_documents, msg: t('sufia.homepage.no_public'), display_thumbs: true, display_access: false } %>
      </div>
    </div>
  </div>
</div><!-- /.col-xs-6 -->
<div class="col-xs-12 col-sm-6 home-column-right">
  <div class="home-panel">
    <div class="row">
      <%= render partial: 'featured_researcher' %>
    </div>
  </div>
  <div class="home-panel">
    <%- if blacklight_config.respond_to?(:tag_cloud_field_name) && blacklight_config.tag_cloud_field_name %>
        <div class="row">
          <h2><%= t('sufia.homepage.explore') %></h2>
          <span class="sr-only"><%= t('sufia.homepage.sr_explore') %></span>
          <%= render partial: 'tagcloud', locals: { tag_cloud_field_name: blacklight_config.tag_cloud_field_name } %>
        </div>
    <%- end %>
  </div>
</div>