<% @page_title = "DOI Requests  - #{application_name}" %>

<div class="row">
    <div class="col-xs-12 margin-bottom-md">
        <%= link_to("Back to DOI List", doi_requests_path, class: 'btn pull-left subtab') %>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <div class="well">
          <h2>DOI Information</h2>

          <dl class="dl-horizontal metadata-collections">
            <dt>Asset Type </dt>
            <dd><%= @doi_request.asset_type %></dd>
            <dt>Asset Title </dt>
            <dd><%= doi_link_for(@doi_request) %></dd>

            <dt>DOI</dt>
            <dd><%= link_to @ezid_doi.id,  @ezid_doi.target %></dd>

            <dt>Target</dt>
            <dd><%= @ezid_doi.target %></dd>

            <dt>Status</dt>
            <dd><%= @ezid_doi.status %></dd>


            <dt>Profile</dt>
            <dd><%= @ezid_doi.profile %></dd>

            <dt>Created</dt>
            <dd><%= @ezid_doi.created %></dd>
          </dl>
        </div>
    </div>
</div>

